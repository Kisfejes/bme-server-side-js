<%- include('../helpers/html-header') -%> 
<div class="container">
  <%- include('../helpers/site-header') -%>
  <form method="post" action="session-create">
    <div class="content-header">
        <a href="/sessions">
          <img src="/assets/icons/arrow-left.svg" width="24" height="24" />
        </a>
      <h3>Add Session</h3>
      <a>
        <button class="btn btn-primary add-session" type="submit">Add Session</button>
      </a>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">Session Name</span>
      </div>
      <input
        type="text"
        class="form-control"
        name="name"
        <% if (typeof session !== 'undefined' && session.name) { %>
          value=<%= session.name %>
        <% } %>
      />     
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">Session Date</span>
      </div>
      <input
        type="datetime-local"
        class="form-control"
        name="date"
        <% if (typeof session !== 'undefined' && session.date) { %>
          value=<%= session.date %>
        <% } %>
      />
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">Session Location</span>
      </div>
      <input
        type="text"
        class="form-control"
        name="location"
        <% if (typeof session !== 'undefined' && session.location) { %>
          value=<%= session.location %>
        <% } %>
      />
    </div>
  </form>
  <%- include('../helpers/error-handling') -%>  
</div>
<%- include('../helpers/html-footer') -%>
